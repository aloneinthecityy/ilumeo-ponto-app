{
  "compilerOptions": {
    
    "target": "esnext",                      
    "module": "commonjs",                   
    "lib": ["esnext", "dom"],                
    "outDir": "./dist",                      
    "rootDir": "./src",                      
    "sourceMap": true,                        

    "strict": true,                          

    "moduleResolution": "node",             
    "esModuleInterop": true,                
    "resolveJsonModule": true,              

    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "types": ["jest", "node"],
    "experimentalDecorators": true,           
    "emitDecoratorMetadata": true            
  },
  "include": [
    "src/**/*"                               
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"                           
  ]
}